    padding: 20px;
    background-color: var(--gray-800);
    border-radius: 20px;
    margin-bottom: 16px;
    backdrop-filter: blur(10px);
  }

  html[data-theme='light'] .productView .productView-flavors-selector {
    background-color: var(--gray-100);
  }

  /* Fixed Mobile */
