{%- if product.metafields.custom.bullets.value != blank -%}
{{ 'section-marquee.css' | asset_url | stylesheet_tag }}

{%- liquid
    assign padding_top = section.settings.padding_top
    assign padding_bottom = section.settings.padding_bottom
    assign icon = section.settings.icon
    assign limitItems = 12
-%}

<style>
    .section-block-{{ section.id }} {
    {%- if section.settings.type_tab_font == 'font_1' -%}
        --font-tab: var(--font-tab-type-1)
    {%- else -%}
        --font-tab: var(--font-tab-type-2)
    {%- endif -%}
    }
</style>

<div
    class="marquee marque-border--{{ section.settings.border }}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--fade-in{% endif %} section-block-{{section.id}}{% if icon == 'thunder_light' %} thunder_light{% endif %}"
    data-limitItems="{{ limitItems }}"
    style="--padding-top: {{ padding_top }}px; --padding-bottom: {{ padding_bottom }}px; --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 }}px; --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 }}px; --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 }}px; --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 }}px; --minus-spacing-top: {{ section.settings.minus_spacing_top }}px; --background: {% if section.settings.mq_gradient != blank %}{{ section.settings.mq_gradient }}{% else %}{{ product.metafields.custom.hexadecimal_2.value | default: section.settings.mq_background }}{% endif %}; --text-size: {{ section.settings.text_size }}px; --text-size-mb: {{ section.settings.text_size_mb }}px; --gap-blocks: {{ section.settings.gap_blocks | times: 0.5 }}px; --border-color: {{ section.settings.border_color }}; --border-color-mb: {{ section.settings.border_color_mb }}; --icon-color: {{ section.settings.icon_color }}; --icon-color-mb: {{ section.settings.icon_color_mb }}; --time-scroll: 100s; --font-weight: {{ section.settings.text_font_weight }}">
    {%- for i in (1..limitItems) -%}
    <div class="marquee__list">
        {%- for bullet in product.metafields.custom.bullets.value -%}
        {%- if icon != 'none' -%}
            <span class="marquee__icon">
            {%- if icon == 'thunder' -%}
                {% render 'icon-thunder' %}
            {%- elsif icon == 'thunder_light' -%}
                {% render 'icon-thunder-light' %}
            {%- elsif icon == 'fire' -%}
                {% render 'icon-fire-2' %}
            {%- endif -%}
            </span>
        {%- else -%}
        <svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="none" viewBox="0 0 200 200" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.dev/svgjs"><path fill="rgba(255, 255, 255, 1)" d="M100 200c-8.333 0-15.278-2.691-20.833-8.073-5.556-5.382-8.334-11.892-8.334-19.531 0-4.34.868-8.247 2.605-11.719 1.736-3.472 4.774-7.292 9.114-11.458 4.514-4.167 8.073-8.073 10.677-11.719 2.778-3.819 4.167-7.118 4.167-9.896v-9.375c-3.82-.868-7.205-2.604-10.156-5.208-2.778-2.778-4.601-6.077-5.47-9.896h-9.374c-2.952 0-6.424 1.389-10.417 4.167-3.993 2.777-7.812 6.163-11.458 10.156-3.646 3.993-7.292 6.944-10.938 8.854-3.472 1.91-7.465 2.865-11.979 2.865-7.812 0-14.41-2.778-19.791-8.334C2.604 115.278 0 108.333 0 100c0-8.333 2.604-15.278 7.813-20.833 5.381-5.556 11.979-8.334 19.791-8.334 7.292 0 13.542 2.605 18.75 7.813 5.209 5.208 9.896 9.635 14.063 13.281 4.166 3.646 8.16 5.469 11.979 5.469h9.375c.868-3.993 2.69-7.292 5.469-9.896 2.951-2.778 6.336-4.514 10.156-5.208v-9.375c0-4.514-3.472-10.243-10.417-17.188L81.51 50.26c-7.118-7.118-10.677-14.67-10.677-22.656 0-7.812 2.778-14.323 8.334-19.531C84.896 2.69 91.84 0 100 0c8.333 0 15.278 2.691 20.833 8.073 5.556 5.382 8.334 11.892 8.334 19.531 0 8.854-4.341 17.188-13.021 25-8.681 7.986-13.021 14.757-13.021 20.313v9.375c3.993.694 7.292 2.43 9.896 5.208 2.778 2.604 4.514 5.903 5.208 9.896h9.375c5.903 0 12.674-4.427 20.313-13.281 7.812-8.855 15.972-13.282 24.479-13.282 7.812 0 14.323 2.865 19.531 8.594C197.309 84.983 200 91.84 200 100c0 8.333-2.691 15.278-8.073 20.833-5.382 5.556-11.892 8.334-19.531 8.334-7.292 0-13.455-2.518-18.49-7.552-5.034-5.035-9.722-9.375-14.062-13.021-4.341-3.646-8.42-5.469-12.24-5.469h-9.375c-1.389 8.333-6.423 13.368-15.104 15.104v9.375c0 5.208 4.34 11.893 13.021 20.052 8.68 8.16 13.021 16.406 13.021 24.74 0 7.812-2.865 14.323-8.594 19.531C115.017 197.309 108.16 200 100 200Z"></path></svg>
        {% endif %}
            <span class="marquee__item{% if block.settings.enable_border_bottom %} enable_border{% endif %}" style="--color: {{ block.settings.color }}; --color-mb: {{ block.settings.color_mb }}">{{ bullet }}</span>
        {%- endfor -%}
    </div>
    {%- endfor -%}
</div>
<script>
        const elementToAnimateMarquee = document.querySelector('.marquee');
        function toggleActiveClass() {
        const viewportHeight = window.innerHeight;
        const elementRect = elementToAnimateMarquee.getBoundingClientRect();

        if (elementRect.top < viewportHeight && elementRect.bottom >= 0) {
            elementToAnimateMarquee.classList.add('active-screen');
        } else {
            elementToAnimateMarquee.classList.remove('active-screen');
        }
        }

        window.addEventListener('scroll', toggleActiveClass);
        toggleActiveClass();
</script>
{%- endif -%}

